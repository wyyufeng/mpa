{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "build",
    "lib": ["es6"],
    "allowSyntheticDefaultImports": true,
    "declarationDir": "build"
  },
  "include": ["src/**/*"],
  "exclude": ["build", "node_modules"]
}
